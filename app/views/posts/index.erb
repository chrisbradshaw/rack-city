
      <% @posts.each_slice(3) do |array_of_3_items|%>
        <div class="row">
            <% array_of_3_items.each do |post|%>
              <div class="col-md-4">
            <h3><a href="/posts/<%= post.id %>"><%= post.title %></a></h3><br>
            <h5> Post By: <%= post.author.name if post.author%></h5><br>
            <p> <%= post.body %></p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>